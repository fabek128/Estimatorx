@using EstimatorX.Core.Extensions
@inject SignInManager<Core.Entities.User> SignInManager

<nav id="navbar-main"
     class="navbar navbar-expand-lg navbar-light navbar-default fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand"
           asp-page="/index"
           style="padding: 0">
            <img src="/images/full-logo.svg"
                 asp-append-version="true"
                 alt="EstimatorX"
                 height="35" />
        </a>
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbar-main-menu"
                aria-controls="navbar-main-menu"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse"
             id="navbar-main-menu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <!-- Projects -->
                <li class="nav-item dropdown">
                    <a id="navbar-main-projects"
                       role="button"
                       href="#"
                       class="nav-link dropdown-toggle"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        Projects
                    </a>
                    <ul class="dropdown-menu"
                        aria-labelledby="navbar-main-projects">
                        <li>
                            <a id="navbar-main-project-view"
                               class="dropdown-item"
                               href="/projects">
                                View Projects
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a id="navbar-main-project-create"
                               class="dropdown-item"
                               href="/projects/create">
                                Create Project
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- Templates -->
                <li class="nav-item dropdown">
                    <a id="navbar-main-templates"
                       role="button"
                       href="#"
                       class="nav-link dropdown-toggle"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        Templates
                    </a>
                    <ul class="dropdown-menu"
                        aria-labelledby="navbar-main-templates">
                        <li>
                            <a id="navbar-main-template-view"
                               class="dropdown-item"
                               href="/templates">
                                View Templates
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a id="navbar-main-template-create"
                               class="dropdown-item"
                               href="/templates/create">
                                Create Template
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- Administrative -->
                <li class="nav-item dropdown">
                    <a id="navbar-main-administrative"
                       role="button"
                       href="#"
                       class="nav-link dropdown-toggle"
                       authorize-roles="@EstimatorX.Shared.Security.Roles.Administrators"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        Administrative
                    </a>
                    <ul class="dropdown-menu"
                        aria-labelledby="navbar-main-administrative">
                        <li>
                            <a id="navbar-main-administrative-organizations"
                               class="dropdown-item"
                               href="/administrative/organizations">
                                Organizations
                            </a>
                        </li>
                        <li>
                            <a id="navbar-main-administrative-users"
                               class="dropdown-item"
                               href="/administrative/users">
                                Users
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a id="navbar-main-administrative-logs"
                               class="dropdown-item"
                               href="/administrative/logs">
                                Logs
                            </a>
                        </li>
                    </ul>
                </li>

            </ul>

            <!-- User Menu -->
            <ul class="navbar-nav"
                style="margin-right: 15px;">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item dropdown">
                        <a id="navbar-dropdown-user"
                           href="#"
                           class="nav-link dropdown-toggle"
                           data-bs-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">
                            <gravatar email="@User.Identity.Name"
                                  class="rounded-circle"
                                  size="24"></gravatar>
                            <span id="navbar-identity-username">@User.GetDisplayName()</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end"
                             aria-labelledby="navbar-dropdown-user">
                            <a id="navbar-identity-profile-link"
                               class="dropdown-item"
                               asp-page="/account/manage/profile">
                                <i class="fas fa-user"></i> Update Profile
                            </a>
                            <a id="navbar-identity-profile-link"
                               class="dropdown-item"
                               asp-page="/account/manage/password">
                                <i class="fas fa-lock"></i> Change Password
                            </a>
                            <div class="dropdown-divider"></div>
                            <a id="navbar-identity-organizations-link"
                               class="dropdown-item"
                               href="/organizations">
                                <i class="fas fa-users"></i> Organizations
                            </a>
                            <div class="dropdown-divider"></div>
                            <a id="navbar-identity-logout-link"
                               class="dropdown-item"
                               asp-page="/account/logout">
                                <i class="fas fa-power-off"></i> Logout
                            </a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a id="navbar-identity-login-link"
                           class="nav-link"
                           asp-page="/account/login">
                            Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="navbar-identity-register-link"
                           class="nav-link"
                           asp-page="/account/register">
                            Register
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
