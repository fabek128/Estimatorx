@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto py-5">
            <div class="card">
                <div class="card-header">
                    @RenderSection("Header", required: true)
                </div>
                <div class="card-body">
                    @RenderBody()
                </div>
                <div class="card-footer">
                    @RenderSection("Footer", required: false)
                </div>
            </div>
        </div>
    </div>
</div>

