@typeparam TItem

@if (Items != null && Items.Any())
{
    @foreach (var item in Items)
    {
        @Row(item)
    }
}
else if (Empty != null)
{
    @Empty
}

@code {
    [Parameter]
    public RenderFragment<TItem> Row { get; set; }

    [Parameter]
    public RenderFragment Empty { get; set; }

    [Parameter]
    public List<TItem> Items { get; set; }
}
