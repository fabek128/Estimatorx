@page "/templates/create"

@using EstimatorX.Client.Pages.Projects.Components
@using EstimatorX.Client.Repositories
@using EstimatorX.Client.Stores

<div class="container-xxl">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/templates">Templates</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Create
            </li>
        </ol>
    </nav>
    <div class="card mb-5">
        <div class="card-header">
            <i class="fas fa-user mr-2"
               aria-hidden="true"></i> Template Create
        </div>
        <div class="card-body">
            <EditForm Model="@Model" OnValidSubmit="@HandleSave">
                <FluentValidationValidator />

                <div class="row">
                    <div class="col">
                        <ValidationSummary />
                    </div>
                </div>

                <ProjectForm TStore="TemplateStore" TRepository="TemplateRepository" TModel="Template" />

                <div class="row">
                    <div class="col">
                        <BusyButton id="save-button"
                                    type="submit"
                                    Busy="Store.IsBusy"
                                    class="btn btn-primary">
                            <BusyTemplate>
                                <span class='spinner-border spinner-border-sm'></span> Saving...
                            </BusyTemplate>
                            <ChildContent>
                                Save
                            </ChildContent>
                        </BusyButton>
                    </div>
                    <div class="col">
                    </div>
                </div>
            </EditForm>

        </div>
    </div>
</div>


