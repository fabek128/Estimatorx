<div class="row">
    <div class="col">
        <div class="accordion-feature" id="@ParentCollapse">
            <Repeater Items="Features">
                <Row Context="feature">
                    <FeatureEditor Feature="feature" ParentCollapse="@ParentCollapse" />
                </Row>
            </Repeater>
        </div>
    </div>
</div>

<div class="row pt-1">
    <div class="col">
        <button type="button"
                id="@(Identifier("add-button"))"
                @onclick="FeatureAdd"
                class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-plus"></i> Add Feature
        </button>

        <button type="button"
                id="@(Identifier("order-button"))"
                @onclick="FeatureReporder"
                class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-sort"></i> Reorder Features
        </button>
    </div>
</div>


